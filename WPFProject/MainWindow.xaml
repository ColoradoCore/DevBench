<Window x:Class="WPFProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevBench" Width="400" Height="200"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        MouseMove="Window_MouseMove"
        WindowStyle="None" AllowsTransparency="True" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="MinimizeButton" Content="_" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Click="MinimizeButton_Click" Margin="0,0,60,0"/>
        <Button x:Name="MaximizeRestoreButton" Content="□" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Click="MaximizeRestoreButton_Click" Margin="0,0,30,0"/>
        <Button x:Name="CloseButton" Content="X" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Click="CloseButton_Click"/>
        <Canvas>
            <Rectangle x:Name="selectionRectangleRect" Stroke="Blue" StrokeThickness="1" Visibility="Hidden"/>
        </Canvas>
        <Button Content="Select Area" Click="SelectArea_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,68,0,0"/>
        <Button Content="Inject Input" Click="InjectInput_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,68,0,0"/>
        <TextBox x:Name="CoordinatesTextBox"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Width="300"
                 Height="47"
                 Margin="0,100,0,0"
                 IsReadOnly="True" />
        <TextBox x:Name="NumberOfInputsTextBox"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Width="110"
                 Height="20"
                 Margin="240,68,0,0"
                 PreviewTextInput="NumberOfInputsTextBox_PreviewTextInput"
                 ToolTip="Enter the number of inputs to inject" />
    </Grid>
</Window>